<%- include("../layouts/header", {title: 'Cadastro de Clientes'}) %>

<%- include("../layouts/menu") %>

<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column is-four-fifths">
              <h1 class="title is-4">Cadastro de Clientes</h1>
            </div>
            <div class="column is-one-fifth">
              <div class="buttons is-pulled-right">
                <a href="/pessoas" class="button is-small">Voltar</a>
              </div>
            </div>
          </div>

      <form action="/pessoas" method="POST">
        <div class="field">
          <label class="label">Nome</label>
          <div class="control">
            <input class="input" type="text" name="nome" placeholder="Digite o nome do cliente" required>
          </div>
        </div>
  
        <div class="field">
          <label class="label">Rua</label>
          <div class="control">
            <input class="input" type="text" name="rua" placeholder="Digite a rua" required>
          </div>
        </div>

        <div class="field">
          <label class="label">Cidade</label>
          <div class="control">
            <input class="input" type="text" name="cidade" placeholder="Digite o nome da cidade" required>
          </div>
        </div>
  
   
  
        <div class="field">
          <div class="control">
            <button type="submit" class="button is-success">Cadastrar</button>
          </div>
        </div>
      </form>
    </div>
  </section>
  
  <%- include("../layouts/footer") %>